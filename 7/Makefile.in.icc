CXX=icpc
CXXFLAGS=-std=c++14 -g -openmp

# If you're using icc, these are good flags to try
OPTFLAGS=-O3 -no-prec-div -xcore-avx2 -ipo \
	-qopt-report=5 -qopt-report-phase=vec \
	-axCORE-AVX512,CORE-AVX2 \
	-unroll-aggressive -fp-model -fast \
	-restrict -openmp -ansi-alias -opt-prefetch -ftree-vectorize

CXXFLAGS+=$(OPTFLAGS)
PYTHON=python
